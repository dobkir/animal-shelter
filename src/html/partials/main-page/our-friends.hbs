            <button class="button" title="Click to learn more">Learn more</button>
          </figure>
        </li>
        <!-- /.friend-list__card -->

        <li class="friend-card">
          <figure class="friend-card__foto">
            <img src="assets/img/pets-woody.png" alt="friend foto: Woody" width="270" height="270">
            <figcaption class="friend-card__name">Woody</figcaption>
            <button class="button" title="Click to learn more">Learn more</button>
          </figure>
        </li>
        <!-- /.friend-list__card -->

      </ul>
      <!-- /.friend-list -->

      <button class="button button__arrow_forward" title="Click to scroll forward"></button>

    </div>
    <!-- /.slider -->

    <button class="button button_colored" title="Click to make a friend">Get to know the rest</button>

  </div>
