<div class="single-line-slider">

  <button class="button button_circle button_page-num" title="Click to scroll back">←</button>

  <ul class="friend-list friend-list_single-line">

    {{! Data is retrieved from src.data}}
    {{#with friend-cards}}

    {{#if card_first}}
    {{> friend-card card_first}}
    {{else}}
    <p>Friend-list first card is empty</p>
    {{/if}}

    {{#if card_second}}
    {{> friend-card card_second}}
    {{else}}
    <p>Friend-list second card is empty</p>
    {{/if}}

    {{#if card_third}}
    {{> friend-card card_third}}
    {{else}}
    <p>Friend-list third card is empty</p>
    {{/if}}

    {{/with}}

  </ul>
  <!-- /.friend-list -->

  <button class="button button_circle button_page-num" title="Click to scroll forward">→</button>

</div>
<!-- /.single-line-slider -->

